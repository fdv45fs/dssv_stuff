<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/studentListFragment">

    <fragment
        android:id="@+id/studentListFragment"
        android:name="com.example.dssv_and_other.ui.StudentListFragment"
        android:label="Student List">

        <action
            android:id="@+id/action_studentListFragment_to_studentFormFragment"
            app:destination="@id/studentFormFragment" />
    </fragment>

    <fragment
        android:id="@+id/studentFormFragment"
        android:name="com.example.dssv_and_other.ui.StudentFormFragment"
        android:label="Student Form">
        <argument
            android:name="studentId"
            app:argType="string"
            android:defaultValue="@null" />
    </fragment>

</navigation>